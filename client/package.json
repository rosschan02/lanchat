{
    "name": "lanchat-client",
    "version": "1.0.0",
    "description": "LanChat 局域网聊天工具 - 客户端",
    "main": "electron/main.js",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
        "electron:build": "vite build && electron-builder",
        "preview": "vite preview"
    },
    "dependencies": {
        "vue": "^3.4.0",
        "vue-router": "^4.2.5",
        "pinia": "^2.1.7",
        "element-plus": "^2.5.0",
        "@element-plus/icons-vue": "^2.3.1",
        "axios": "^1.6.5",
        "socket.io-client": "^4.7.4",
        "dayjs": "^1.11.10"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^5.0.0",
        "vite": "^5.0.0",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "concurrently": "^8.2.2",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.lanchat.app",
        "productName": "LanChat",
        "directories": {
            "output": "dist-electron"
        },
        "win": {
            "target": "nsis",
            "icon": "build/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "shortcutName": "LanChat"
        },
        "files": [
            "dist/**/*",
            "electron/**/*"
        ]
    }
}