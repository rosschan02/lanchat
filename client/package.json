{
    "name": "lanchat-client",
    "version": "1.0.0",
    "description": "LanChat 局域网聊天工具 - 客户端",
    "main": "electron/main.js",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
        "electron:build": "vite build && electron-builder",
        "preview": "vite preview"
    },
    "dependencies": {
        "vue": "^3.5.29",
        "vue-router": "^4.5.0",
        "pinia": "^2.3.0",
        "element-plus": "^2.13.2",
        "@element-plus/icons-vue": "^2.3.1",
        "axios": "^1.8.0",
        "socket.io-client": "^4.8.0",
        "dayjs": "^1.11.13"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^5.2.0",
        "vite": "^6.2.0",
        "electron": "^35.0.0",
        "electron-builder": "^25.1.0",
        "concurrently": "^9.1.0",
        "wait-on": "^8.0.0"
    },
    "build": {
        "appId": "com.lanchat.app",
        "productName": "LanChat",
        "directories": {
            "output": "dist-electron"
        },
        "win": {
            "target": "nsis",
            "icon": "build/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "shortcutName": "LanChat"
        },
        "files": [
            "dist/**/*",
            "electron/**/*"
        ]
    }
}